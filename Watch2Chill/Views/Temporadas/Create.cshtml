@model Watch2Chill.Models.Temporadas

@{
    ViewData["Title"] = "Adicionar Temporada";
}

<h1>Adicionar Temporada</h1>

<h4>Temporadas</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            @* Esta div é o local onde os erros gerados na app serao reportados*@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NumTemps" class="control-label"></label>
                <input asp-for="NumTemps" class="form-control" />
                <span asp-validation-for="NumTemps" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumEps" class="control-label"></label>
                <input asp-for="NumEps" class="form-control" />
                <span asp-validation-for="NumEps" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Data" class="control-label"></label>
                <input type="date" asp-for="Data" class="form-control" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdVideosFK" class="control-label"></label>
                <select asp-for="IdVideosFK" class="form-control" asp-items="ViewBag.IdVideosFK">
                    <option value="0">Escolha um video, por favor.</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
